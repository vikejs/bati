{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["./node_modules/@vikejs/biome-config/config.json"],
  "files": {
    "includes": [
      "**",
      "!**/*.cjs",
      "!**/*.ts.build-*.mjs",
      "!**/dist/*",
      "!**/node_modules/*",
      "!**/.DS_Store",
      "!scripts/gen-composite-workflow-action.js",
      "!pnpm-lock.yaml",
      "!boilerplates/biome/files/biome.json"
    ]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "overrides": [
    {
      "includes": ["packages/**/*.ts", "website/**/*.ts", "website/**/*.tsx"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          }
        }
      }
    },
    {
      "includes": [
        "website/**/*.css",
        "boilerplates/tailwindcss/**/*.css",
        "boilerplates/shadcn-ui/**/*.css"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noUnknownAtRules": "off"
          }
        }
      }
    }
  ]
}
